<!--输入单号-->
 <image class='bg' src="../source/recBg.png" mode="aspectFill"></image>

 <view class="postInput">单号:
   <input class='inputBox1' type="number" placeholder="请输入快递单号 "  value="{{num}}" focus="{{focus}}" bindinput='confirm' bindblur='userNumInput'/>
 </view>



<!--选择时间-->

 <view class="postInput"> 取件时间:

    <view class="inputBox2">
      <picker class='start' mode="date"value="{{date}}"start="2018-11-14"end="2019-11-14"bindchange="bindDateChange">
     
       <view>
          {{date}}
       </view>
   
      </picker>

    </view>

    <view class="inputBox2">
     
      <picker mode="time" value="{{time}}" start="01:00" end="24:00" bindchange="bindTimeChange" >

        <view>
          {{time}}
        </view>

      </picker>

   </view>

       

</view>







<!--收件地址-->



<image class='background' src="../source/paper.png" mode="aspectFill"></image>

<view class="recAddr">收件地址：</view>

<!--无常用收件地址时-->

 <block wx:if="{{canUseAddr.length===0||more===1}}">

<view class='addLoc' bindtap="addAddr">
 <image class='plus1' src='../source/plus1.png'></image>
新增收件地址</view>

</block>



<!--新增-->

<block wx:if="{{IsAdd==1&&IsEdit!=1}}">
<view class='addBox'>
  <view class="form_item">

    <view class='form_text'>姓名:</view>

    <input class="form_input" type="text" placeholder="{{reg_name}}" bindblur='userNameInput' />

  </view>

  <view class="form_item">

   <view class='form_text'>电话:</view>

   <input class="form_input" type="number" placeholder="{{reg_phonenum}}" bindblur='userPhoneNumInput' maxlength='11'/>

  </view>

  <view class="form_item">

   <view class='form_text'>地址:</view>

   <input class="form_input" type="text" placeholder="{{reg_address}}" bindblur='userAddressInput'/>

  </view>
  
  <view class='buttonItem'>
  <view wx:if="{{IsAdd==1}}"class='button' bindtap="saveAdd">确定</view>

  <view wx:if="{{IsEdit==1}}"class='button' bindtap="saveEdit" >确定</view>

  <view class='button' bindtap="cancel" >返回</view>
</view>
</view>
</block>





<!--更多地址的展开与收起-->

 <block wx:for="{{canUseAddr}}"  wx:for-index="index" >

   <block wx:if="{{more==0&&index==0&&select==0}}">

    <view class='showAddr'   bindtap='addrSelect' id="{{index}}" > 
    
    <view class='leftBox'>
        <view class='name'>{{item.name}}</view>

        <view class='phonenum'>{{item.phonenum}}</view>

        <view class='address'>地址：{{item.address}}</view>
    </view>
    
    <view class='rightBbox'>
        <image class='edit_image' src='../source/pencil.png'  bindtap='editAddr' data-id='{{item._id}}' ></image>
    </view>
   </view>
</block>

 <block wx:if="{{more==0&&index==0&&select==0}}" >

<view class="more" bindtap='moreRecLoc'>更多地址</view>

</block>

 

</block>

   

   



<block wx:for="{{canUseAddr}}"  wx:for-index="index" >

<block wx:if="{{more==1}}" >

 <view class='showAddr'   bindtap='addrSelect' id="{{index}}" > 
    
    <view class='leftBox'>
        <view class='name'>{{item.name}}</view>

        <view class='phonenum'>{{item.phonenum}}</view>

        <view class='address'>地址：{{item.address}}</view>
    </view>
    
    <view class='rightBbox'>
        <image class='edit_image' src='../source/pencil.png'  bindtap='editAddr' data-id='{{item._id}}' ></image>
    </view>
   </view>
 </block>

  </block>









<block wx:for="{{canUseAddr}}"  wx:for-index="index"  >

<block wx:if="{{select==1&&index==clickId&&more==0}}">

  <view class='showAddr'   bindtap='addrSelect' id="{{index}}" > 
    
    <view class='leftBox'>
        <view class='name'>{{item.name}}</view>

        <view class='phonenum'>{{item.phonenum}}</view>

        <view class='address'>地址：{{item.address}}</view>
    </view>
    
    <view class='rightBbox'>
        <image class='edit_image' src='../source/pencil.png'  bindtap='editAddr' data-id='{{item._id}}' ></image>
    </view>
  
   </view>

   <view class="more" bindtap='moreRecLoc'>更多地址</view>

   </block>

 

</block>









