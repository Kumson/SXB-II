<text class='title'>添加收件地址</text>
<view class="form_item">
  <text class='form_text'>姓名:</text>
  <input class="form_input" type="text" bindblur='UserNameInput'/>
</view>
<view class="form_item">
  <text class='form_text'>电话:</text>
  <input class="form_input" type="number" bindblur='UserPhoneNumInput'/>
</view>
<view class="form_item">
  <text class='form_text'>地址:</text>
  <input class="form_input" type="text" bindblur='UserAddressInput'/>
</view>
<view style='display:flex;flex-direction:row;margin-top:5%'>
  <view class='switchtext'>设为默认:</view>
  <switch bindchange='SwitchChange'></switch>
</view>
<view class='button' bindtap="SaveAdd" >添加</view>